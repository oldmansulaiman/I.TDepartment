<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_about_Linear_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEVELOPERS"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:textColor="#000"
        android:textStyle="normal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AMTUL AHAD BUSHRA"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:textSize="30sp"
        android:textStyle="bold"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/in"
        android:layout_gravity="center"
        android:onClick="bulink"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SULAIMAN ABDUL"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:textSize="30sp"
        android:textStyle="bold"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/in"
        android:layout_gravity="center"
        android:onClick="sulink"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AUSAAF LATEEF"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:textSize="30sp"
        android:textStyle="bold"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/fb_button"
        android:layout_gravity="center"
        android:onClick="aulink"/>

</LinearLayout>