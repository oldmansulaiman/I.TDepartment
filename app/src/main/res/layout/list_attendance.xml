<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/list_attendance_list_relative_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_attendance_list_name"
        android:textSize="14sp"
        android:text="Total Attendance"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_attendance_list_attendance_of"
        android:text="Attendance Of:"
        android:layout_below="@+id/list_attendance_list_name"
        android:textSize="12sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_attendance_list_student_name"
        android:layout_toRightOf="@+id/list_attendance_list_attendance_of"
        android:text="Sulaiman"
        android:layout_below="@+id/list_attendance_list_name"
        android:textSize="12sp"
        android:layout_toEndOf="@+id/list_attendance_list_attendance_of"/>
</RelativeLayout>